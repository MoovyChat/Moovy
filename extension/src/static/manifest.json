{
  "short_name": "Quiet Chat",
  "name": "Quiet Chat",
  "description": "Enjoy the Netflix now with the Comments",
  "version": "1.0.5",
  "manifest_version": 3,
  "key": "",
  "permissions": ["identity", "storage", "tabs", "scripting", "cookies"],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*", "http://localhost:3000/*"],
      "js": ["index.js", "netflix.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["netflix.js", "qchat.js"],
      "matches": ["https://www.netflix.com/*", "http://localhost:3000/*"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://www.netflix.com/*", "http://localhost:3000/*"]
  },
  "host_permissions": ["https://www.netflix.com/*", "http://localhost:3000/*"],
  "icons": {
    "16": "qc_16.png",
    "48": "qc_48.png",
    "128": "qc_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quiet Chat",
    "default_icons": {
      "16": "qc_16.png",
      "48": "qc_48.png",
      "128": "qc_128.png"
    }
  },
  "options_page": "options.html",
  "oauth2": {
    "client_id": "596322814794-o62innt0hvn2ua8mmiksiis0gl4k3279.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "background.js"
  }
}
