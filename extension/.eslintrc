{
  "plugins": ["react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn" // <--- THIS IS THE NEW RULE
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest",
    "allowImportExportEverywhere": true
  },

  "env": {
    "es6": true
  }
}
